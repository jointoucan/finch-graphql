{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/types",
      "packages/browser-polyfill",
      "packages/client",
      "packages/react",
      "packages/api",
      "packages/finch-typescript-codegen",
      "packages/devtools",
      "packages/docs"
    ],
    "nohoist": [
      "**/html-minifier-terser"
    ]
  },
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "name": "finch-graphql-packages",
  "scripts": {
    "build": "yarn lerna exec \"yarn build\"",
    "devtools": "yarn workspace finch-graphql-devtools dev chrome",
    "docs": "yarn workspace finch-docs start",
    "test": "yarn lerna exec \"yarn test\"",
    "compile": "yarn lerna exec \"yarn compile\"",
    "lint": "eslint -c ./.eslintrc.js **/{src,app}/**/*.ts"
  }
}
